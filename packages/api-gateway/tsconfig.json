{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "dist",
    /* Strict Type-Checking Options */
    "strict": true,
    "strictPropertyInitialization": false,
    "noImplicitAny": true,
    /* Module Resolution Options */
    "moduleResolution": "node",
    "esModuleInterop": true,
    /* Advanced Options */
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    /* Alias */
    "baseUrl": ".",
    "paths": {
        "@/*": ["./src/*"],
    },
    "types": ["node", "jest"],
  },
  "ts-node": {
    "transpileOnly": true,
    "files": true,
  },
  "include": ["src/**/*", "src/types", "__test__"],
  "exclude": ["node_modules", "coverage", "dist", "__test__", "jest.config.cjs"]
}
